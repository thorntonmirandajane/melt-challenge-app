{% comment %}
  Weight Loss Challenge Form Block

  This block embeds the challenge form into the storefront.
  It uses Multipass for seamless customer authentication.
{% endcomment %}

<div class="weight-loss-challenge-wrapper" data-challenge-block>
  <div class="challenge-container">
    {%comment%} Show iframe to challenge app - no login required {%endcomment%}
    <div class="challenge-iframe-container">
      {% assign form_type = block.settings.form_type | default: 'start' %}
      {% comment %} Use configured app_url, or fall back to automatic detection from app proxy {% endcomment %}
      {% if block.settings.app_url != blank %}
        {% assign app_base_url = block.settings.app_url %}
      {% else %}
        {% comment %} Default to the production Render URL {% endcomment %}
        {% assign app_base_url = 'https://melt-challenge-app.onrender.com' %}
      {% endif %}
      <iframe
        id="challenge-iframe"
        src="{{ app_base_url }}/customer/challenge/{{ form_type }}"
        frameborder="0"
        loading="lazy"
        style="width: 100%; min-height: 800px; border: none; border-radius: 8px;"
      ></iframe>
    </div>
  </div>
</div>

<style>
  .weight-loss-challenge-wrapper {
    padding: 20px 0;
  }

  .challenge-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .challenge-iframe-container {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    overflow: hidden;
  }

  .challenge-login-prompt {
    display: flex;
    justify-content: center;
    padding: 40px 20px;
  }

  .login-card {
    background: #fff;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    text-align: center;
    max-width: 500px;
    width: 100%;
  }

  .login-card h2 {
    font-size: 28px;
    margin-bottom: 15px;
    color: #333;
  }

  .login-card p {
    font-size: 16px;
    color: #666;
    margin-bottom: 25px;
    line-height: 1.5;
  }

  .challenge-btn {
    display: inline-block;
    padding: 14px 32px;
    background: #667eea;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s;
  }

  .challenge-btn:hover {
    background: #5568d3;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .help-text {
    font-size: 14px !important;
    margin-top: 20px !important;
    margin-bottom: 0 !important;
  }

  .help-text a {
    color: #667eea;
    text-decoration: none;
  }

  .help-text a:hover {
    text-decoration: underline;
  }

  /* Responsive iframe height adjustment */
  @media (max-width: 768px) {
    #challenge-iframe {
      min-height: 800px;
    }

    .login-card {
      padding: 30px 20px;
    }

    .login-card h2 {
      font-size: 24px;
    }
  }
</style>

<script>
  // Auto-resize iframe based on content
  window.addEventListener('message', function(event) {
    // Security: verify origin matches your app URL
    const appUrl = "{{ block.settings.app_url }}";
    if (event.origin !== appUrl) return;

    if (event.data && event.data.type === 'resize') {
      const iframe = document.getElementById('challenge-iframe');
      if (iframe && event.data.height) {
        iframe.style.height = event.data.height + 'px';
      }
    }

    // Handle redirect messages (e.g., after form submission)
    if (event.data && event.data.type === 'redirect') {
      window.location.href = event.data.url;
    }
  });
</script>

{% schema %}
{
  "name": "Challenge Form",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Weight Loss Challenge!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Transform your life with our community challenge."
    },
    {
      "type": "url",
      "id": "app_url",
      "label": "App URL",
      "info": "The full URL of your Shopify app (e.g., https://designers-argue-race-clearly.trycloudflare.com)"
    },
    {
      "type": "select",
      "id": "form_type",
      "label": "Form Type",
      "options": [
        {
          "value": "start",
          "label": "Start Challenge Form"
        },
        {
          "value": "end",
          "label": "End Challenge Form"
        }
      ],
      "default": "start",
      "info": "Choose whether this displays the start or end challenge form"
    }
  ]
}
{% endschema %}
